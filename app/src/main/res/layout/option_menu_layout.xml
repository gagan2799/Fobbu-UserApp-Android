<?xml version="1.0" encoding="utf-8"?>


<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="150dp"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:padding="1dp"
        android:layout_height="wrap_content">
    <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardElevation="10dp">

        <LinearLayout
                android:layout_width="match_parent" android:layout_height="match_parent"
                android:orientation="vertical">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="FOBBU"
                    android:textColor="@color/color_grey"
                    android:textSize="@dimen/textsize_large"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="10dp"
                    android:layout_gravity="center"
                    android:gravity="center_vertical"
            />

            <View android:layout_width="match_parent"
                  android:layout_height="0.8dp"
                  android:alpha=".50"
                  android:background="@color/color_grey"/>


            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textViewCancelRSA"
                    android:text="@string/cancel_rsa"
                    android:layout_marginTop="25dp"
                    android:layout_gravity="bottom"
                    android:gravity="center_vertical"
                    android:drawablePadding="10dp"
                    android:textSize="@dimen/textsize_medium"
                    android:textColor="@color/color_grey"
                    android:layout_marginLeft="10dp"
                    android:drawableLeft="@drawable/cancel_red"
                    android:drawableStart="@drawable/cancel_red"/>

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textViewCallHelpline"
                    android:text="@string/call_helpline"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="20dp"
                    android:layout_gravity="bottom"
                    android:gravity="center_vertical"
                    android:drawablePadding="10dp"
                    android:textSize="@dimen/textsize_medium"
                    android:textColor="@color/color_grey"
                    android:layout_marginBottom="30dp"
                    android:drawableLeft="@drawable/helpline"
                    android:drawableStart="@drawable/helpline"/>




        </LinearLayout>

    </android.support.v7.widget.CardView>



</LinearLayout>