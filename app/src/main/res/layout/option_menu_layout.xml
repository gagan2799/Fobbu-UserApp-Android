<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="180dp"
        android:orientation="vertical"
        android:layout_height="wrap_content">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="FOBBU"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:alpha=".65"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="10dp"
            android:layout_gravity="center"
            android:gravity="center"
    />

    <View android:layout_width="match_parent"
          android:layout_height="1dp"
          android:background="@color/color_grey"/>


    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textViewCancelRSA"
            android:text="@string/cancel_rsa"
            android:layout_marginTop="25dp"
            android:layout_gravity="center"
            android:gravity="start"
            android:drawablePadding="10dp"
            android:textSize="20sp"
            android:layout_marginLeft="10dp"
            android:drawableLeft="@drawable/error_draw"
            android:drawableStart="@drawable/error_draw"/>

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textViewCallHelpline"
            android:text="Call Helpline"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:gravity="start"
            android:drawablePadding="10dp"
            android:textSize="20sp"
            android:layout_marginBottom="50dp"
            android:drawableLeft="@drawable/error_draw"
            android:drawableStart="@drawable/error_draw"/>

</LinearLayout>