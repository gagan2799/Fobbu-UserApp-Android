<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:background="@color/home_background"
        android:clickable="true"
        android:layout_height="match_parent">

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/your_membership_id"
            android:gravity="center"
            android:id="@+id/tvMembershipIdHome"
            android:textSize="@dimen/textsize_medium" />

    <View android:layout_width="match_parent"
          android:layout_height="1dp"
          android:layout_marginTop="5dp"
          android:id="@+id/view"
          android:layout_below="@+id/tvMembershipIdHome"
          android:background="@color/view_grey"/>

    <LinearLayout
            android:orientation="horizontal"
            android:weightSum="3.02"
            android:background="@color/white"
            android:layout_below="@+id/view"
            android:id="@+id/llAssistance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:id="@+id/llRSA"
                android:layout_weight="1">

            <ImageView
                    android:layout_width="wrap_content"
                    android:src="@drawable/rsa_hover"
                       android:layout_height="wrap_content"/>

            <TextView
                    android:textSize="@dimen/textsize_small"
                    android:layout_width="wrap_content"
                    android:padding="5dp"
                    android:gravity="center"
                    android:text="@string/rsa_text"
                      android:layout_height="wrap_content"/>

        </LinearLayout>


        <View
                android:layout_width="0dp"
                android:layout_weight="0.01"
                android:layout_height="50dp"
                android:layout_gravity="center_vertical"
                android:background="@color/view_grey"/>

        <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_weight="1">

            <ImageView
                    android:layout_width="wrap_content"
                    android:src="@drawable/ods_hover"
                    android:layout_height="wrap_content"/>

            <TextView
                    android:textSize="@dimen/textsize_small"
                    android:layout_width="wrap_content"
                    android:padding="5dp"
                    android:gravity="center"
                    android:text="@string/ods_text"
                    android:layout_height="wrap_content"/>

        </LinearLayout>

        <View
                android:layout_width="0dp"
                android:layout_weight="0.01"
                android:layout_height="50dp"
                android:layout_gravity="center_vertical"
                android:background="@color/view_grey"/>

        <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_weight="1">

            <ImageView
                    android:layout_width="wrap_content"
                    android:src="@drawable/lsd_hover"
                    android:layout_height="wrap_content"/>

            <TextView
                    android:textSize="@dimen/textsize_small"
                    android:layout_width="wrap_content"
                    android:padding="5dp"
                    android:gravity="center"
                    android:text="@string/lsd_text"
                    android:layout_height="wrap_content"/>

        </LinearLayout>

    </LinearLayout>

    <View android:layout_width="match_parent"
          android:layout_height="1dp" 
          android:layout_below="@+id/llAssistance"
          android:background="@color/view_grey"/>

    <View android:layout_width="match_parent"
          android:layout_height="1dp"
          android:layout_above="@+id/llBottom"
    android:background="@color/view_grey"/>

    <LinearLayout
            android:orientation="horizontal"
            android:weightSum="4"
            android:id="@+id/llBottom"
            android:background="@color/white"
            android:layout_alignParentBottom="true"
             android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:layout_weight="1">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:orientation="vertical"
                    android:background="@drawable/border_line_grey"
                    android:gravity="center" >

                <TextView
                        android:textSize="@dimen/textsize_extra_small"
                        android:layout_width="wrap_content"
                        android:gravity="center"
                        android:paddingRight="2dp"
                        android:layout_marginTop="4dp"
                        android:paddingLeft="2dp"
                        android:background="@color/red"
                        android:text="@string/cashback"
                        android:textColor="@color/white"
                        android:layout_height="wrap_content"/>


                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_marginTop="2dp"
                        android:layout_marginBottom="2dp"
                        android:src="@drawable/fobbu_pay"
                        android:layout_height="wrap_content"/>

                <TextView
                        android:textSize="@dimen/textsize_extra_small"
                        android:layout_width="wrap_content"
                        android:gravity="center"
                        android:layout_marginBottom="4dp"
                        android:paddingRight="2dp"
                        android:visibility="invisible"
                        android:paddingLeft="2dp"
                        android:background="@color/red"
                        android:text="@string/cashback"
                        android:textColor="@color/white"
                        android:layout_height="wrap_content"/>

            </LinearLayout>


            <TextView
                    android:textSize="@dimen/textsize_small"
                    android:layout_width="wrap_content"
                    android:padding="5dp"
                    android:gravity="center"
                    android:text="@string/fobbu_pay"
                    android:layout_height="wrap_content"/>

        </LinearLayout>

        <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:id="@+id/llAddNewVehicle"
                android:layout_marginTop="10dp"
                android:layout_weight="1">


            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:orientation="vertical"
                    android:background="@drawable/border_line_grey"
                    android:gravity="center" >

                <TextView
                        android:textSize="@dimen/textsize_extra_small"
                        android:layout_width="wrap_content"
                        android:gravity="center"
                        android:paddingRight="2dp"
                     android:visibility="invisible"
                        android:layout_marginTop="4dp"
                        android:paddingLeft="2dp"
                        android:background="@color/red"
                        android:text="@string/cashback"
                        android:textColor="@color/white"
                        android:layout_height="wrap_content"/>


                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_marginTop="2dp"
                        android:layout_marginBottom="2dp"
                        android:src="@drawable/add_vehicle"
                        android:layout_height="wrap_content"/>

                <TextView
                        android:textSize="@dimen/textsize_extra_small"
                        android:layout_width="wrap_content"
                        android:gravity="center"
                        android:paddingRight="2dp"
                        android:visibility="invisible"
                        android:layout_marginBottom="4dp"
                        android:paddingLeft="2dp"
                        android:background="@color/red"
                        android:text="@string/cashback"
                        android:textColor="@color/white"
                        android:layout_height="wrap_content"/>
            </LinearLayout>


            <TextView
                    android:textSize="@dimen/textsize_small"
                    android:layout_width="wrap_content"
                    android:padding="5dp"
                    android:gravity="center"
                    android:text="@string/add_vehicle"
                    android:layout_height="wrap_content"/>

        </LinearLayout>

        <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="10dp"
                android:id="@+id/llProfile"
                android:gravity="center"
                android:layout_weight="1">


            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:orientation="vertical"
                    android:background="@drawable/border_line_grey"
                    android:gravity="center" >

                <TextView
                        android:textSize="@dimen/textsize_extra_small"
                        android:layout_width="wrap_content"
                        android:gravity="center"
                        android:paddingRight="2dp"
                        android:visibility="invisible"
                        android:layout_marginTop="4dp"
                        android:paddingLeft="2dp"
                        android:background="@color/red"
                        android:text="@string/cashback"
                        android:textColor="@color/white"
                        android:layout_height="wrap_content"/>


                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_marginTop="2dp"
                        android:layout_marginBottom="2dp"
                        android:src="@drawable/complete_profile"
                        android:layout_height="wrap_content"/>

                <TextView
                        android:textSize="@dimen/textsize_extra_small"
                        android:layout_width="wrap_content"
                        android:gravity="center"
                        android:paddingRight="2dp"
                        android:layout_marginBottom="4dp"
                        android:visibility="invisible"
                        android:paddingLeft="2dp"
                        android:background="@color/red"
                        android:text="@string/cashback"
                        android:textColor="@color/white"
                        android:layout_height="wrap_content"/>
            </LinearLayout>


            <TextView
                    android:textSize="@dimen/textsize_small"
                    android:layout_width="wrap_content"
                    android:padding="5dp"
                    android:gravity="center"
                    android:text="@string/complete_profile"
                    android:layout_height="wrap_content"/>

        </LinearLayout>

        <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:layout_weight="1">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:orientation="vertical"
                    android:background="@drawable/border_line_grey"
                    android:gravity="center" >

                <TextView
                        android:textSize="@dimen/textsize_extra_small"
                        android:layout_width="wrap_content"
                        android:gravity="center"
                        android:paddingRight="2dp"
                        android:layout_marginTop="4dp"
                        android:paddingLeft="2dp"
                        android:background="@color/red"
                        android:text="@string/cashback"
                        android:textColor="@color/white"
                        android:layout_height="wrap_content"/>


                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_marginTop="2dp"
                        android:layout_gravity="center"
                        android:layout_marginBottom="2dp"
                        android:src="@drawable/add_money_saving"
                        android:layout_height="wrap_content"/>
                <TextView
                        android:textSize="@dimen/textsize_extra_small"
                        android:layout_width="wrap_content"
                        android:layout_marginBottom="4dp"
                        android:gravity="center"
                        android:paddingRight="2dp"
                        android:visibility="invisible"
                        android:paddingLeft="2dp"
                        android:background="@color/red"
                        android:text="@string/cashback"
                        android:textColor="@color/white"
                        android:layout_height="wrap_content"/>

            </LinearLayout>

            <TextView
                    android:textSize="@dimen/textsize_small"
                    android:layout_width="wrap_content"
                    android:padding="5dp"
                    android:gravity="center"
                    android:text="@string/add_money"
                    android:layout_height="wrap_content"/>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>