<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/blue_transparent_back">

    <RelativeLayout
        android:id="@+id/rlTop"
        android:layout_width="match_parent"
        android:background="@color/grey_header"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/ivBack"
            android:layout_width="wrap_content"
            android:padding="16dp"
            android:src="@drawable/back_button"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sms_verification"
            android:id="@+id/tvLogin"
            android:textAllCaps="true"
            android:textSize="@dimen/textsize_large"
            android:textColor="@color/red"
            android:layout_below="@+id/ivBack"
            android:layout_centerHorizontal="true"/>

    </RelativeLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rlTop"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="@string/we_verifying"
        android:layout_marginRight="@dimen/margin_left"
        android:layout_marginLeft="@dimen/margin_left"
        android:textColor="@color/black"
        android:textSize="@dimen/textsize_medium"
        android:id="@+id/etMobile"
        android:padding="10dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etMobile"
        android:layout_marginTop="25dp"
        android:layout_marginStart="50dp"
        android:id="@+id/llPIN"
        android:layout_marginEnd="50dp"
        android:orientation="horizontal">


        <EditText
            android:id="@+id/edPinOne"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_weight="1"

            android:gravity="center_horizontal"
            android:inputType="numberPassword"
            android:imeOptions="actionNext"
            android:maxLength="1"
            android:singleLine="true"
            android:background="@drawable/half_recatangle"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/edPinTwo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:imeOptions="actionNext"
            android:inputType="numberPassword"
            android:maxLength="1"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:background="@drawable/half_recatangle"/>

        <EditText
            android:id="@+id/edPinThree"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:imeOptions="actionNext"
            android:inputType="numberPassword"
            android:maxLength="1"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:background="@drawable/half_recatangle"/>

        <EditText
            android:id="@+id/edPinFour"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:imeOptions="actionDone"
            android:gravity="center_horizontal"
            android:inputType="numberPassword"
            android:maxLength="1"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:background="@drawable/half_recatangle"/>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/in_case_auto"
        android:layout_below="@+id/llPIN"
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:layout_marginRight="@dimen/margin_left"
        android:layout_marginLeft="@dimen/margin_left"
        android:textColor="@color/black"
        android:textSize="@dimen/textsize_medium"
        android:id="@+id/tvInCase"
        android:padding="10dp"/>

    <TextView
        android:id="@+id/tvSave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tvResendCode"
        android:layout_centerHorizontal="true"
        android:text="@string/confirm"
        android:paddingRight="45dp"
        android:textSize="@dimen/textsize_normal"
        android:paddingTop="13dp"
        android:paddingLeft="45dp"
        android:singleLine="true"
        android:paddingBottom="19dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/red_rectangle"
        android:textColor="#ffffff" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textSize="@dimen/textsize_medium"
        android:text="@string/resend_code"
        android:padding="10dp"
        android:layout_alignParentBottom="true"
        android:singleLine="true"
        android:layout_marginBottom="10dp"
        android:textColor="@color/blue"
        android:id="@+id/tvResendCode"/>

</RelativeLayout>