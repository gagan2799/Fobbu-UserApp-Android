<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/grey_header"
        android:orientation="vertical"
        tools:context=".activities.paymentModule.PaymentModeActivity">

    <RelativeLayout
            android:id="@+id/relativeLayoutWorkSummaryToolBar"
            android:layout_width="match_parent"
            android:background="@drawable/rounded_white_shadow"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_height="wrap_content">

        <ImageView
                android:id="@+id/ivDrawer"
                android:layout_width="wrap_content"
                android:padding="12dp"
                android:visibility="invisible"
                android:src="@drawable/drawer"
                android:layout_height="wrap_content"/>

        <TextView
                android:id="@+id/tvSOS"
                android:textColor="@color/drawer_text_color"
                android:layout_alignParentLeft="true"
                android:padding="10dp"
                android:gravity="center"
                android:textSize="@dimen/textsize_small"
                android:drawableTop="@drawable/sos"
                android:text="@string/sos"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <ImageView
                android:id="@+id/ivCrossRSA"
                android:src="@drawable/cross_gray"
                android:layout_width="wrap_content"
                android:padding="10dp"
                android:visibility="gone"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"/>

        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/fobbu_logo_blue"
                android:layout_centerInParent="true"/>

        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="5dp"
                android:id="@+id/imageViewOptionMenuPaymentSummary"
                android:src="@drawable/option"
                android:layout_alignParentEnd="true"/>
    </RelativeLayout>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvHeading"
            android:textSize="@dimen/textsize_normal"
            android:text="@string/payment_screen"
            android:layout_gravity="center"
            android:layout_marginBottom="30dp"
            android:layout_marginTop="30dp"
            android:textColor="@color/colorPrimary"/>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="13dp"
            android:id="@+id/linearLayoutBankPayment"
            android:background="@color/white"
            android:orientation="horizontal">

        <ImageView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:src="@drawable/bank"/>

        <TextView
                android:layout_width="0dp"
                android:layout_weight="7"
                android:gravity="center_vertical"
                android:layout_height="wrap_content"
                android:textSize="@dimen/textsize_medium"
                android:textColor="@color/color_grey"
                android:text="@string/bank_accounts"/>

    </LinearLayout>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="13dp"
            android:layout_marginTop="10dp"
            android:id="@+id/linearLayoutCardsPayment"
            android:background="@color/white"
            android:orientation="horizontal">

        <ImageView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:src="@drawable/credit_card"/>

        <TextView
                android:layout_width="0dp"
                android:layout_weight="7"
                android:gravity="center_vertical"
                android:layout_height="wrap_content"
                android:textSize="@dimen/textsize_medium"
                android:textColor="@color/color_grey"
                android:text="@string/saved_cards"/>

    </LinearLayout>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="13dp"
            android:layout_marginTop="10dp"
            android:id="@+id/linearLayoutUpiPayment"
            android:background="@color/white"
            android:orientation="horizontal">

        <ImageView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:src="@drawable/upi_payment"/>

        <TextView
                android:layout_width="0dp"
                android:layout_weight="7"
                android:gravity="center_vertical"
                android:layout_height="wrap_content"
                android:textSize="@dimen/textsize_medium"
                android:textColor="@color/color_grey"
                android:text="@string/upi_payments"/>

    </LinearLayout>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="13dp"
            android:layout_marginTop="10dp"
            android:id="@+id/linearLayoutWalletsPayment"
            android:background="@color/white"
            android:orientation="horizontal">

        <ImageView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:src="@drawable/wallet"/>

        <TextView
                android:layout_width="0dp"
                android:layout_weight="7"
                android:gravity="center_vertical"
                android:layout_height="wrap_content"
                android:textSize="@dimen/textsize_medium"
                android:textColor="@color/color_grey"
                android:text="@string/wallets"/>

    </LinearLayout>


</LinearLayout>