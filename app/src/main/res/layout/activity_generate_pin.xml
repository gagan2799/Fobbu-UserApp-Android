<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/blue_transparent_back">


    <RelativeLayout
            android:id="@+id/rlTop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <ImageView
                android:id="@+id/ivBack"
                android:layout_width="wrap_content"
                android:padding="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:src="@drawable/back_button"
                android:layout_height="wrap_content"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/generate_pin"
                android:id="@+id/tvLogin"
                android:textAllCaps="true"
                android:textSize="@dimen/textsize_large"
                android:textColor="@color/red"
                android:layout_below="@+id/ivBack"
                android:layout_centerHorizontal="true"/>

    </RelativeLayout>


    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rlTop"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="@string/please_generate"
            android:layout_marginRight="@dimen/margin_left"
            android:layout_marginLeft="@dimen/margin_left"
            android:textColor="@color/black"
            android:textSize="@dimen/textsize_medium"
            android:id="@+id/etMobile"
            android:padding="10dp"/>


    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/etMobile">

        <TextView
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:gravity="center"
                android:text="@string/current_pin"
                android:layout_marginRight="@dimen/margin_left"
                android:layout_marginLeft="@dimen/margin_left"
                android:textColor="@color/view_grey"
                android:textSize="@dimen/textsize_normal"
                android:id="@+id/tvCurrnetPin"
        />

        <LinearLayout
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="50dp"
                android:id="@+id/llCurrentPIN"
                android:layout_marginEnd="50dp"
                android:orientation="horizontal">


            <EditText
                    android:id="@+id/edCurrentPinOne"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:inputType="numberPassword"
                    android:imeOptions="actionNext"
                    android:maxLength="1"
                    android:singleLine="true"
                    android:background="@drawable/half_recatangle"
                    android:textColor="@color/black"
                    android:textSize="@dimen/login_textsize_medium"/>

            <EditText
                    android:id="@+id/edCurrentPinTwo"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:imeOptions="actionNext"
                    android:inputType="numberPassword"
                    android:maxLength="1"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textSize="@dimen/login_textsize_medium"
                    android:background="@drawable/half_recatangle"/>

            <EditText
                    android:id="@+id/edCurrentPinThree"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:imeOptions="actionNext"
                    android:inputType="numberPassword"
                    android:maxLength="1"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textSize="@dimen/login_textsize_medium"
                    android:background="@drawable/half_recatangle"/>

            <EditText
                    android:id="@+id/edCurrentPinFour"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:inputType="numberPassword"
                    android:maxLength="1"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textSize="@dimen/login_textsize_medium"
                    android:background="@drawable/half_recatangle"/>

        </LinearLayout>


        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/etMobile"
                android:layout_marginTop="25dp"
                android:gravity="center"
                android:text="@string/new_pin"
                android:layout_marginRight="@dimen/margin_left"
                android:layout_marginLeft="@dimen/margin_left"
                android:textColor="@color/view_grey"
                android:textSize="@dimen/textsize_normal"
                android:id="@+id/tvNewPin"
        />

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvNewPin"
                android:layout_marginStart="50dp"
                android:id="@+id/llPIN"
                android:layout_marginEnd="50dp"
                android:orientation="horizontal">


            <EditText
                    android:id="@+id/edPinOne"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:inputType="numberPassword"
                    android:imeOptions="actionNext"
                    android:maxLength="1"
                    android:singleLine="true"
                    android:background="@drawable/half_recatangle"
                    android:textColor="@color/black"
                    android:textSize="@dimen/login_textsize_medium"/>

            <EditText
                    android:id="@+id/edPinTwo"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:imeOptions="actionNext"
                    android:inputType="numberPassword"
                    android:maxLength="1"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textSize="@dimen/login_textsize_medium"
                    android:background="@drawable/half_recatangle"/>

            <EditText
                    android:id="@+id/edPinThree"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:imeOptions="actionNext"
                    android:inputType="numberPassword"
                    android:maxLength="1"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textSize="@dimen/login_textsize_medium"
                    android:background="@drawable/half_recatangle"/>

            <EditText
                    android:id="@+id/edPinFour"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:inputType="numberPassword"
                    android:maxLength="1"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textSize="@dimen/login_textsize_medium"
                    android:background="@drawable/half_recatangle"/>

        </LinearLayout>

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/llPIN"
                android:layout_marginTop="25dp"
                android:gravity="center"
                android:text="@string/confirm_pin"
                android:layout_marginRight="@dimen/margin_left"
                android:layout_marginLeft="@dimen/margin_left"
                android:textColor="@color/view_grey"
                android:textSize="@dimen/textsize_normal"
                android:id="@+id/tvConfirmPin"
        />

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvConfirmPin"
                android:layout_marginStart="50dp"
                android:id="@+id/llPIN1"
                android:layout_marginEnd="50dp"
                android:orientation="horizontal">


            <EditText
                    android:id="@+id/edPinFive"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"

                    android:gravity="center_horizontal"
                    android:inputType="numberPassword"
                    android:imeOptions="actionNext"
                    android:maxLength="1"
                    android:singleLine="true"
                    android:background="@drawable/half_recatangle"
                    android:textColor="@color/black"
                    android:textSize="@dimen/login_textsize_medium"/>

            <EditText
                    android:id="@+id/edPinSix"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:imeOptions="actionNext"
                    android:inputType="numberPassword"
                    android:maxLength="1"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textSize="@dimen/login_textsize_medium"
                    android:background="@drawable/half_recatangle"/>

            <EditText
                    android:id="@+id/edPinSeven"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:imeOptions="actionNext"
                    android:inputType="numberPassword"
                    android:maxLength="1"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textSize="@dimen/login_textsize_medium"
                    android:background="@drawable/half_recatangle"/>

            <EditText
                    android:id="@+id/edPinEight"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:imeOptions="actionDone"
                    android:gravity="center_horizontal"
                    android:inputType="numberPassword"
                    android:maxLength="1"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textSize="@dimen/login_textsize_medium"
                    android:background="@drawable/half_recatangle"/>

        </LinearLayout>

    </LinearLayout>


<LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_alignParentBottom="true"
              android:layout_height="wrap_content">
    <TextView
            android:id="@+id/tvGenerate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/generate"
            android:gravity="center"
            android:textSize="@dimen/login_textsize_medium"
            android:padding="@dimen/red_rounded_rectangle_padding"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/red_rect_rounded"
            android:singleLine="true"
            android:layout_marginBottom="20dp"
            android:textColor="@color/white" />

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/textsize_medium"
            android:text="@string/do_it_later"
            android:padding="10dp"
            android:singleLine="true"
            android:layout_marginBottom="10dp"
            android:textColor="@color/blue"
            android:id="@+id/tvDoItLater"/>
</LinearLayout>



</RelativeLayout>