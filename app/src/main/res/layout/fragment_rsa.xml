<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
        android:background="@color/blue_transparent_back"
        android:clickable="true"
        android:layout_height="match_parent">

    <com.google.android.gms.maps.MapView
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/mapView"
            android:background="@color/black"
            android:layout_width="match_parent"
            android:layout_height="@dimen/map_height"/>

    <RelativeLayout
            android:id="@+id/rlTopDrawer"
            android:layout_width="match_parent"
            android:background="@drawable/rounded_white_shadow"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_height="wrap_content">

        <ImageView
                android:id="@+id/ivBack"
                android:layout_width="wrap_content"
                android:padding="12dp"
                android:src="@drawable/back_button"
                android:layout_height="wrap_content"/>

        <TextView
                android:id="@+id/tvSOS"
                android:textColor="@color/drawer_text_color"
                android:layout_alignParentLeft="true"
                android:padding="10dp"
                android:gravity="center"
                android:textSize="@dimen/textsize_small"
                android:drawableTop="@drawable/sos"
                android:text="@string/sos"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <ImageView
                android:id="@+id/ivCrossRSA"
                android:src="@drawable/cross_gray"
                android:layout_width="wrap_content"
                android:padding="10dp"
                android:visibility="gone"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_height="wrap_content"/>

        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/fobbu_logo_blue"
                android:layout_centerInParent="true"/>

    </RelativeLayout>


    <RelativeLayout
            android:layout_width="match_parent"
            android:id="@+id/rlBelow"
            android:layout_below="@+id/mapView"
            android:layout_alignParentBottom="true"
            android:layout_height="wrap_content">

        <android.support.v4.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <RelativeLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="match_parent">

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/llHomeServices"
                        android:visibility="gone"
                        android:orientation="vertical">

                    <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                        <View android:layout_width="50dp"
                              android:layout_height="1dp"
                              android:layout_marginRight="20dp"
                              android:layout_toLeftOf="@+id/tvName"
                              android:layout_centerVertical="true"
                              android:background="@color/view_grey"
                              android:layout_marginEnd="20dp"
                              android:layout_toStartOf="@+id/tvName"/>

                        <TextView android:layout_width="wrap_content"
                                  android:layout_height="wrap_content"
                                  android:textColor="@color/colorPrimary"
                                  android:gravity="center"
                                  android:padding="10dp"
                                  android:layout_centerInParent="true"
                                  android:text="@string/hello"
                                  android:textSize="@dimen/textsize_normal"
                                  android:id="@+id/tvName"/>

                        <View android:layout_width="50dp"
                              android:layout_height="1dp"
                              android:layout_toRightOf="@+id/tvName"
                              android:layout_centerVertical="true"
                              android:layout_marginLeft="20dp"
                              android:background="@color/view_grey"/>

                    </RelativeLayout>

                    <TextView
                            android:textSize="@dimen/textsize_medium"
                            android:text="@string/whats_keeping_stranded"
                            android:layout_width="match_parent"
                            android:paddingBottom="10dp"
                            android:gravity="center"
                            android:id="@+id/tvServiceRequest"
                            android:layout_height="wrap_content"/>

                    <android.support.v7.widget.RecyclerView
                            android:layout_width="match_parent"
                            android:id="@+id/recyclerViewServices"
                            android:layout_marginBottom="10dp"
                            android:layout_height="wrap_content"/>

                </LinearLayout>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:id="@+id/llSubPoints"
                        android:visibility="gone"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                    <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                        <View android:layout_width="50dp"
                              android:layout_height="1dp"
                              android:layout_toLeftOf="@+id/tvHeading"
                              android:layout_centerVertical="true"
                              android:background="@color/view_grey"
                              android:layout_toStartOf="@+id/tvHeading"/>

                        <TextView android:layout_width="wrap_content"
                                  android:layout_height="wrap_content"
                                  android:textColor="@color/colorPrimary"
                                  android:gravity="center"
                                  android:padding="10dp"
                                  android:layout_centerInParent="true"
                                  android:text="@string/burst_tyre_worries"
                                  android:id="@+id/tvHeading"
                                  android:textSize="@dimen/textsize_normal"/>

                        <View android:layout_width="50dp"
                              android:layout_height="1dp"
                              android:layout_toRightOf="@+id/tvHeading"
                              android:layout_centerVertical="true"
                              android:background="@color/view_grey"/>

                    </RelativeLayout>

                    <TextView
                            android:textSize="@dimen/textsize_medium"
                            android:text="@string/help_you_fix"
                            android:layout_width="match_parent"
                            android:paddingBottom="10dp"
                            android:gravity="center"
                            android:id="@+id/tvSubheading"
                            android:layout_height="wrap_content"/>

                    <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/etVehicleNumber"
                            android:singleLine="true"
                            android:textSize="@dimen/textsize_medium"
                            android:background="@drawable/border_line_grey"
                            android:padding="10dp"
                            android:gravity="center"
                            android:hint="@string/enter_vehicle_no"
                            android:layout_marginLeft="50dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginRight="50dp"/>


                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_marginTop="20dp"
                            android:orientation="horizontal"
                            android:id="@+id/llTwo"
                            android:gravity="center_vertical|center"
                            android:layout_height="wrap_content">

                        <LinearLayout
                                android:layout_width="wrap_content"
                                android:orientation="vertical"
                                android:gravity="center"
                                android:id="@+id/llScooterTwo"
                                android:layout_height="wrap_content">

                            <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/scooter_selected"/>

                            <TextView
                                    android:layout_width="wrap_content"
                                    android:text="@string/bike_scooter"
                                    android:padding="5dp"
                                    android:textSize="@dimen/textsize_medium"
                                    android:textColor="@color/drawer_text_color"
                                    android:layout_height="wrap_content"/>

                        </LinearLayout>


                        <View android:layout_width="1dp"
                              android:layout_height="match_parent"
                              android:background="@color/view_grey"
                              android:layout_margin="10dp"/>

                        <LinearLayout
                                android:layout_width="wrap_content"
                                android:orientation="vertical"
                                android:gravity="center"
                                android:id="@+id/llCarTwo"
                                android:layout_height="wrap_content">

                            <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/car_selected"/>

                            <TextView
                                    android:layout_width="wrap_content"
                                    android:text="@string/car_suv"
                                    android:paddingBottom="5dp"
                                    android:paddingTop="5dp"
                                    android:paddingRight="10dp"
                                    android:paddingLeft="10dp"
                                    android:textSize="@dimen/textsize_medium"
                                    android:textColor="@color/drawer_text_color"
                                    android:layout_height="wrap_content"/>

                        </LinearLayout>

                    </LinearLayout>


                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_marginTop="20dp"
                            android:orientation="horizontal"
                            android:id="@+id/llThree"
                            android:visibility="gone"
                            android:gravity="center_vertical|center"
                            android:layout_height="wrap_content">

                        <LinearLayout
                                android:layout_width="wrap_content"
                                android:orientation="vertical"
                                android:gravity="center"
                                android:id="@+id/llScooterThree"
                                android:layout_height="wrap_content">

                            <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/scooter_selected"/>

                            <TextView
                                    android:layout_width="wrap_content"
                                    android:text="@string/bike_scooter"
                                    android:padding="5dp"
                                    android:textSize="@dimen/textsize_medium"
                                    android:textColor="@color/drawer_text_color"
                                    android:layout_height="wrap_content"/>

                            <TextView
                                    android:layout_width="wrap_content"
                                    android:text="@string/petrol"
                                    android:textSize="@dimen/textsize_medium"
                                    android:textColor="@color/drawer_text_color"
                                    android:layout_height="wrap_content"/>

                        </LinearLayout>


                        <View android:layout_width="1dp"
                              android:layout_height="match_parent"
                              android:background="@color/view_grey"
                              android:layout_margin="10dp"/>

                        <LinearLayout
                                android:layout_width="wrap_content"
                                android:orientation="vertical"
                                android:gravity="center"
                                android:id="@+id/llCarFuelDieselThree"
                                android:layout_height="wrap_content">

                            <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/suv_selected"/>

                            <TextView
                                    android:layout_width="wrap_content"
                                    android:text="@string/car_suv"
                                    android:paddingBottom="5dp"
                                    android:paddingTop="5dp"
                                    android:paddingRight="10dp"
                                    android:paddingLeft="10dp"
                                    android:textSize="@dimen/textsize_medium"
                                    android:textColor="@color/drawer_text_color"
                                    android:layout_height="wrap_content"/>

                            <TextView
                                    android:layout_width="wrap_content"
                                    android:text="@string/diesel"
                                    android:textSize="@dimen/textsize_medium"
                                    android:textColor="@color/drawer_text_color"
                                    android:layout_height="wrap_content"/>

                        </LinearLayout>

                        <View android:layout_width="1dp"
                              android:layout_height="match_parent"
                              android:background="@color/view_grey"
                              android:layout_margin="10dp"/>

                        <LinearLayout
                                android:layout_width="wrap_content"
                                android:orientation="vertical"
                                android:gravity="center"
                                android:id="@+id/llCarFuelPetrolThree"
                                android:layout_height="wrap_content">

                            <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/car_selected"/>

                            <TextView
                                    android:layout_width="wrap_content"
                                    android:text="@string/car_suv"
                                    android:paddingBottom="5dp"
                                    android:paddingTop="5dp"
                                    android:paddingRight="10dp"
                                    android:paddingLeft="10dp"
                                    android:textSize="@dimen/textsize_medium"
                                    android:textColor="@color/drawer_text_color"
                                    android:layout_height="wrap_content"/>

                            <TextView
                                    android:layout_width="wrap_content"
                                    android:text="@string/petrol"
                                    android:textSize="@dimen/textsize_medium"
                                    android:textColor="@color/drawer_text_color"
                                    android:layout_height="wrap_content"/>

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:id="@+id/llUploadPics"
                        android:visibility="gone"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                    <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                        <View android:layout_width="50dp"
                              android:layout_height="1dp"
                              android:layout_toLeftOf="@+id/tvHeadingUpload"
                              android:layout_centerVertical="true"
                              android:background="@color/view_grey"
                              android:layout_toStartOf="@+id/tvHeadingUpload"/>

                        <TextView android:layout_width="wrap_content"
                                  android:layout_height="wrap_content"
                                  android:textColor="@color/colorPrimary"
                                  android:gravity="center"
                                  android:padding="10dp"
                                  android:layout_centerInParent="true"
                                  android:text="@string/few_pics_please"
                                  android:id="@+id/tvHeadingUpload"
                                  android:textSize="@dimen/textsize_normal"/>

                        <View android:layout_width="50dp"
                              android:layout_height="1dp"
                              android:layout_toRightOf="@+id/tvHeadingUpload"
                              android:layout_centerVertical="true"
                              android:background="@color/view_grey"/>

                    </RelativeLayout>

                    <TextView
                            android:textSize="@dimen/textsize_medium"
                            android:text="@string/mind_it_upload"
                            android:layout_width="match_parent"
                            android:paddingBottom="10dp"
                            android:gravity="center"
                            android:layout_height="wrap_content"/>


                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:orientation="vertical">

                        <LinearLayout
                                android:layout_width="match_parent"
                                android:orientation="horizontal"
                                android:weightSum="4"
                                android:layout_marginLeft="15dp"
                                android:layout_marginRight="15dp"
                                android:gravity="bottom"
                                android:layout_marginBottom="10dp"
                                android:layout_height="match_parent">

                            <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_weight="1"
                                    android:id="@+id/llPhoto1"
                                    android:layout_marginRight="15dp"
                                    android:background="@drawable/border_line_grey"
                                    android:layout_height="60dp">
                                <ImageView
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:id="@+id/ivImage1"
                                        android:scaleType="center"
                                        android:src="@drawable/photo_camera"/>

                            </LinearLayout>

                            <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_weight="1"
                                    android:id="@+id/llPhoto2"
                                    android:layout_marginRight="15dp"
                                    android:background="@drawable/border_line_grey"
                                    android:layout_height="60dp">
                                <ImageView
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:id="@+id/ivImage2"
                                        android:scaleType="center"
                                        android:src="@drawable/photo_camera"/>

                            </LinearLayout>

                            <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_weight="1"
                                    android:id="@+id/llPhoto3"
                                    android:background="@drawable/border_line_grey"
                                    android:layout_height="60dp">
                                <ImageView
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:id="@+id/ivImage3"
                                        android:scaleType="center"
                                        android:src="@drawable/photo_camera"/>

                            </LinearLayout>

                            <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_weight="1"
                                    android:id="@+id/llPhoto4"
                                    android:layout_marginLeft="15dp"
                                    android:background="@drawable/border_line_grey"
                                    android:layout_height="60dp">
                                <ImageView
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:id="@+id/ivImage4"
                                        android:scaleType="center"
                                        android:src="@drawable/photo_camera"/>

                            </LinearLayout>
                        </LinearLayout>

                    </LinearLayout>

                    <TextView
                            android:id="@+id/tvUploadPics"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/upload_pics"
                            android:textSize="@dimen/login_textsize_medium"
                            android:gravity="center"
                            android:padding="@dimen/red_rounded_rectangle_padding"
                            android:layout_marginRight="20dp"
                            android:layout_marginLeft="20dp"
                            android:foreground="?attr/selectableItemBackground"
                            android:singleLine="true"
                            android:layout_marginTop="15dp"
                            android:background="@drawable/red_rect_rounded"
                            android:textColor="@color/white"/>

                    <TextView
                            android:id="@+id/tvSkip"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/skip_this_step"
                            android:textSize="@dimen/textsize_small"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="10dp"
                            android:foreground="?attr/selectableItemBackground"
                            android:layout_marginBottom="30dp"
                            android:textColor="@color/blue"/>


                </LinearLayout>


                <LinearLayout
                        android:layout_width="match_parent"
                        android:id="@+id/llFindFobbu"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                    <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                        <View android:layout_width="50dp"
                              android:layout_height="1dp"
                              android:layout_toLeftOf="@+id/tvHeadingFind"
                              android:layout_centerVertical="true"
                              android:background="@color/colorPrimary"
                              android:layout_toStartOf="@+id/tvHeadingFind"/>

                        <TextView android:layout_width="wrap_content"
                                  android:layout_height="wrap_content"
                                  android:textColor="@color/colorPrimary"
                                  android:gravity="center"
                                  android:padding="10dp"
                                  android:layout_centerInParent="true"
                                  android:text="Rs 250/-"
                                  android:id="@+id/tvHeadingFind"
                                  android:textSize="@dimen/textsize_normal"/>

                        <View android:layout_width="50dp"
                              android:layout_height="1dp"
                              android:layout_toRightOf="@+id/tvHeadingFind"
                              android:layout_centerVertical="true"
                              android:background="@color/colorPrimary"/>

                    </RelativeLayout>

                    <TextView
                            android:textSize="@dimen/textsize_small"
                            android:text="@string/tyre_1"
                            android:layout_width="match_parent"
                            android:padding="2dp"
                            android:id="@+id/text1"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="10dp"
                            android:layout_height="wrap_content"/>

                    <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="3dp"
                            android:src="@drawable/dotted_gray"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="10dp"
                            android:layerType="software"/>


                    <TextView
                            android:textSize="@dimen/textsize_small"
                            android:text="@string/tyre_2"
                            android:layout_width="match_parent"
                            android:padding="2dp"
                            android:id="@+id/text2"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="10dp"
                            android:layout_height="wrap_content"/>

                    <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="3dp"
                            android:src="@drawable/dotted_gray"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="10dp"
                            android:layerType="software"/>

                    <TextView
                            android:textSize="@dimen/textsize_small"
                            android:text="@string/tyre_3"
                            android:layout_width="match_parent"
                            android:id="@+id/text3"
                            android:padding="2dp"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="10dp"
                            android:layout_height="wrap_content"/>

                    <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="3dp"
                            android:src="@drawable/dotted_gray"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="10dp"
                            android:layerType="software"/>

                    <TextView
                            android:textSize="@dimen/textsize_small"
                            android:text="@string/tyre_4"
                            android:layout_width="match_parent"
                            android:padding="2dp"
                            android:id="@+id/text4"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="10dp"
                            android:layout_height="wrap_content"/>

                    <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="3dp"
                            android:src="@drawable/dotted_gray"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="10dp"
                            android:layerType="software"/>

                    <TextView
                            android:id="@+id/tvFindFobbu"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/find_fobbu"
                            android:layout_alignParentBottom="true"
                            android:layout_gravity="center_horizontal"
                            android:layout_centerHorizontal="true"
                            android:textSize="@dimen/login_textsize_medium"
                            android:gravity="center"
                            android:padding="@dimen/red_rounded_rectangle_padding"
                            android:layout_marginRight="20dp"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="15dp"
                            android:foreground="?attr/selectableItemBackground"
                            android:paddingBottom="25dp"
                            android:layout_marginBottom="10dp"
                            android:background="@drawable/red_rect_rounded"
                            android:textColor="@color/white"/>

                    <LinearLayout android:layout_width="match_parent"
                                  android:layout_height="wrap_content"
                                  android:id="@+id/llTerms"
                                  android:gravity="center"
                                  android:orientation="horizontal">

                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/terms"
                                android:textSize="@dimen/textsize_small"
                                android:layout_gravity="center_horizontal"
                                android:foreground="?attr/selectableItemBackground"
                                android:textColor="@color/drawer_text_color"/>
                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/conditions"
                                android:textSize="@dimen/textsize_small"
                                android:layout_marginLeft="5dp"
                                android:layout_gravity="center_horizontal"
                                android:foreground="?attr/selectableItemBackground"
                                android:textColor="@color/blue"/>
                    </LinearLayout>


                </LinearLayout>


            </RelativeLayout>

        </android.support.v4.widget.NestedScrollView>


    </RelativeLayout>

    <RelativeLayout
            android:layout_width="match_parent"
            android:background="@color/white"
            android:layout_below="@+id/mapView"
            android:id="@+id/rlServiceType"
            android:visibility="visible"
            android:layout_height="wrap_content">


    </RelativeLayout>


    <View android:layout_width="match_parent"
          android:layout_height="1dp"
          android:id="@+id/view1"
          android:layout_below="@+id/rlServiceType"
          android:background="@color/view_grey"/>


    <LinearLayout
            android:layout_width="match_parent"
            android:background="@color/white"
            android:weightSum="2.05"
            android:id="@+id/llVehicle"
            android:visibility="gone"
            android:layout_above="@+id/tvFindFobbu"
            android:layout_height="wrap_content">

        <LinearLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@drawable/border_line_grey"
                android:orientation="vertical">
            <TextView
                    android:textSize="@dimen/textsize_small"
                    android:text="@string/select_vehicle_type"
                    android:layout_width="match_parent"
                    android:padding="10dp"
                    android:gravity="center"
                    android:layout_height="wrap_content"/>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:gravity="center"
                    android:layout_marginBottom="10dp"
                    android:layout_height="wrap_content">

                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/scooter_blue"
                        android:id="@+id/ivBike"
                        android:layout_centerVertical="true"
                        android:padding="8dp"/>

                <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:layout_marginTop="6dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginBottom="6dp"
                        android:background="@color/view_grey"/>

                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/car_gray"
                        android:layout_centerVertical="true"
                        android:id="@+id/ivCar"
                        android:padding="8dp"/>

            </LinearLayout>

        </LinearLayout>

        <View android:layout_width="0dp"
              android:layout_weight="0.05"
              android:layout_height="match_parent"
              android:background="@color/home_background"/>


    </LinearLayout>


    <RelativeLayout
            android:id="@+id/rlBigProfile"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/black"
            android:clickable="true"
            android:visibility="gone">

        <com.github.chrisbanes.photoview.PhotoView
                android:id="@+id/imgBig"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

        <ImageView
                android:id="@+id/imgClose"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:padding="10dp"
                android:src="@drawable/cross_white"/>

    </RelativeLayout>

    <RelativeLayout
            android:layout_width="match_parent"
            android:id="@+id/rlLoader"
            android:visibility="gone"
            android:layout_height="match_parent">

        <com.wang.avi.AVLoadingIndicatorView
                android:id="@+id/avi"
                style="@style/AVLoadingIndicatorView.Large"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="visible"
                android:layout_centerInParent="true"
                app:indicatorColor="@color/colorPrimary"
                app:indicatorName="BallScaleMultipleIndicator"/>

    </RelativeLayout>

</RelativeLayout>