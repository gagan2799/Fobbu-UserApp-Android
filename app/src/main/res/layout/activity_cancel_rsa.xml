<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/grey_header"
        android:id="@+id/rlRequestCancel">

    <RelativeLayout
            android:id="@+id/rlTop"
            android:layout_width="match_parent"
            android:background="@drawable/rounded_white_shadow"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_height="wrap_content">

        <ImageView
                android:id="@+id/ivBack"
                android:layout_width="wrap_content"
                android:padding="16dp"
                android:src="@drawable/back_button"
                android:layout_height="wrap_content"/>

        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:padding="8dp"
                android:id="@+id/ivHead"
                android:src="@drawable/fobbu_logo_blue"/>

    </RelativeLayout>

    <TextView
            android:layout_width="wrap_content"
            android:layout_below="@+id/rlTop"
            android:layout_centerInParent="true"
            android:layout_height="wrap_content"
            android:id="@+id/tvHeading"
            android:textColor="@color/color_grey"
            android:textSize="@dimen/textsize_normal"
            android:text="@string/cancel_request_screen"/>


    <android.support.v7.widget.RecyclerView
            android:layout_margin="10dp"
            android:padding="10dp"
            android:background="@drawable/border_line_white"
            android:layout_width="match_parent"
            android:id="@+id/recyclerViewCancelRsa"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_below="@+id/tvHeading"
            android:layout_height="wrap_content"/>


    <TextView
            android:id="@+id/tvCancelRequest"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:text="@string/cancel_request"
            android:textSize="@dimen/login_textsize_medium"
            android:gravity="center"
            android:padding="@dimen/red_rounded_rectangle_padding"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:foreground="?attr/selectableItemBackground"
            android:singleLine="true"
            android:layout_marginBottom="10dp"
            android:background="@drawable/red_rect_rounded"
            android:textColor="@color/white"/>


</RelativeLayout>