<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/intro_background"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v4.view.ViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:background="@android:color/transparent"
        android:overScrollMode="never" />


    <TextView
        android:id="@+id/tvTryFobbu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/circleIndicator"
        android:layout_centerHorizontal="true"
        android:text="@string/try_fobbu"
        android:textSize="@dimen/textsize_medium"
        android:padding="@dimen/red_rounded_rectangle_padding"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:gravity="center"
        android:foreground="?attr/selectableItemBackground"
        android:singleLine="true"
        android:background="@drawable/red_rect_rounded"
        android:layout_marginBottom="15dp"
        android:textColor="@color/white" />

    <me.relex.circleindicator.CircleIndicator
        android:id="@+id/circleIndicator"
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_height="30dp"
       />// app:ci_drawable="@drawable/dot_selected"
        app:ci_drawable_unselected="@drawable/dot_unselected" />

</RelativeLayout>